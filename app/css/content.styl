#splash
	height 600px

	.pure-u-1
		background url("../assets/images/splash.jpg")
		background-attachment fixed
		background-position center center
		background-repeat no-repeat
		background-size cover
		display table
		height 100%
		width 100%
		
		.splash-content
			color _white
			display table-cell
			letter-spacing 3px
			vertical-align middle

			a
				background _orange
				border 3px solid darken(_orange, 25%)
				color _white
				display inline-block
				font-size .8em
				font-weight bold
				padding 10px 0 10px 10px
				text-decoration none
				text-shadow 1px 1px 1px rgba(0, 0, 0, .3)
				text-transform uppercase

				i
					margin 0 10px

			h1
				font-family Befrisky
				font-size 3.2em
				font-weight normal
				line-height 1em
				margin 0
				text-shadow 2px 1px 3px rgba(0, 0, 0, .8)

			p
				font-size .8em
				font-style italic
				margin 25px 0 50px
				text-shadow 2px 1px 3px rgba(0, 0, 0, .5)

.section
	border-bottom 5px solid _orange
	border-top 5px solid _orange
	padding-top 50px
	text-align left
	
	a, p
		font-size .8em
		font-style italic

	h2
		font-family 'Fjalla One', sans-serif
		font-size 2.25em
		margin 25px 0
		text-align center
		text-transform uppercase

		&:after
			margin-left 10px

		&:after, &:before
			color _orange
			content "-"

		&:before
			margin-right 10px

	h3
		font-family 'Fjalla One', sans-serif
		font-size 1.25em
		font-weight normal
		margin 50px 0
		text-transform uppercase

	.container
		margin 0 10px

	.musicians
		background #F3F3F5
		border-top 3px solid _darkgray
		margin 50px 0 0

		.musician
			background _white
			box-shadow 0 0 10px rgba(0, 0, 0, .2)
			margin 25px 0 50px

			a.link i
				margin-left 5px

			img
				margin-top 0

			p.name
				font-size 1em
				font-weight bold
				text-align center
				text-transform uppercase

			.information
				border-top 1px solid _darkgray
				margin-top 25px

				a
					color _orange
					display block
					font-weight bold
					padding 10px 0
					text-align center
					text-decoration none

				p
					display none
					font-size .7em
					margin-top 25px

			.skills
				text-align center
				
				a
					color _orange

					i
						font-size 30px

				p
					margin 0

	.pictures
		margin-bottom 25px