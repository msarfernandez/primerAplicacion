.section
	background _white
	border-bottom 5px solid _orange
	border-top 5px solid _orange
	margin 50px 0
	padding 50px 10px 25px
	text-align left

	h2
		font-family 'Fjalla One', sans-serif
		font-size 2.25em
		margin 25px 0
		text-align center
		text-transform uppercase

		&:after
			margin-left 10px

		&:after, &:before
			color _orange
			content "-"

		&:before
			margin-right 10px

	h3
		font-family 'Fjalla One', sans-serif
		font-size 1.25em
		font-weight normal
		margin 50px 0
		text-transform uppercase

	p
		font-size .8em
		font-style italic