_descriptionColor = #95a5a6
_facebookColor = #3b5998
_lightGray = #F6F6F6
_border = #ccc
_twitterColor = #00aced
_youtubeColor = #bb0000

.container-fluid

	h2
		font-size 2em
		font-style italic
		font-weight bold
		margin 25px 0 40px

	#discography, #whoweare, #events
		padding-top 50px

	#discography
		background _lightGray
		border-top 2px solid _border

	#events
		
		.event-list

			h3
				font-size 1.2em
				font-weight bold

			.col-xs-12
				padding 0

			.event
				border-bottom 10px solid lighten(_orange, 25%)
				border-top 10px solid lighten(_orange, 25%)
				margin 50px 0
				padding 65px 0 0
				position relative

				.date
					background darken(_orange, 15%)
					border 3px solid _white
					border-radius 100%
					box-shadow 0 0 10px rgba(0, 0, 0, .3)
					left 50%
					margin-left -40px
					padding 15px 18px 10px
					position absolute
					top -25px

					span
						color _white
						display block
						font-weight bold

						&.day
							font-size 2em
							margin-bottom 5px

						&.month
							font-size 1.25em

				img
					margin-top 25px
					width 100%

				.event-description
					padding 15px 0 25px
					text-align left

					a
						text-align center

					p
						color _descriptionColor
						display none
						font-size .9em
						font-style italic

				.hour, .place
					text-align left

				.image-text
					color _descriptionColor
					font-size .75em
					letter-spacing 0
					margin-bottom 25px
					text-align center

				.links
					overflow hidden

					& > div
						padding 0

					a
						color _black
						display block
						font-weight bold
						padding 10px 0

						&.facebook-event
							background _border

						&.map
							background _lightGray

	#whoweare
		background _lightGray
		border-bottom 2px solid _border
		border-top 2px solid _border
		padding-bottom 25px

		figure
			background _white
			box-shadow 0 0 5px rgba(0, 0, 0, .3)
			display block
			margin 0 auto 25px
			max-width 350px
			padding 5px

			figcaption
				color _descriptionColor
				padding 25px 0

				a
					padding-top 25px

				.name
					color _black
					font-weight bold

				.show-information
					color _black
					display none
					font-size .9em
					font-style italic
					padding 25px 5px 15px
					letter-spacing 1px
					text-align left

			img
				height 100%
				width 100%

				&:hover
					cursor pointer

		.col-sm-4
			padding 0

	.plain-text

		p
			letter-spacing 1px
			margin 0
			padding-bottom 25px
			text-align left

			.befrisky
				font-family "Befrisky"
				font-size 1.25em

.social-bar > div
	text-align center

	&.facebook
		
		&:hover
			background _facebookColor

		&:hover span
			color _white

		span
			color _facebookColor

	&.twitter
		color _twitterColor

		&:hover
			background _twitterColor

		&:hover span
			color _white

		span
			color _twitterColor

	&.youtube
		color _youtubeColor

		&:hover
			background _youtubeColor
			color _white

		&:hover span
			color _white

		span
			color _youtubeColor

	a
		display block
		padding 10px

		&:hover
			text-decoration none

	span
		display block
		font-size 2em
		margin 0
		applyTransition(.2s, ease-in-out)

		&.social-text
			display none