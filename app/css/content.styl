#splash
	height 600px

	.pure-u-1
		background url("../assets/images/splash.jpg")
		background-attachment fixed
		background-position center center
		background-repeat no-repeat
		background-size cover
		display table
		height 100%
		width 100%
		
		.splash-content
			color _white
			display table-cell
			letter-spacing 3px
			vertical-align middle

			a
				applyTransition(.5s, ease-in-out)
				background _orange
				border 3px solid darken(_orange, 25%)
				color _white
				display inline-block
				font-size .8em
				font-weight bold
				padding 10px 0 10px 10px
				text-decoration none
				text-shadow 1px 1px 1px rgba(0, 0, 0, .3)
				text-transform uppercase

				&:hover
					background darken(_orange, 25%)

				i
					margin 0 10px

			h1
				font-family Befrisky
				font-size 3.2em
				font-weight normal
				line-height 1em
				margin 0
				text-shadow 2px 1px 3px rgba(0, 0, 0, .8)

			p
				font-size .8em
				font-style italic
				margin 25px 0 50px
				text-shadow 2px 1px 3px rgba(0, 0, 0, .5)

.section
	border-top 10px solid _orange
	padding-top 50px
	text-align left
	
	a, p
		font-size .8em
		font-style italic
		text-decoration none

	h2
		font-family 'Fjalla One', sans-serif
		font-size 2.25em
		margin 25px 0
		text-align center
		text-transform uppercase

		&:after
			margin-left 10px

		&:after, &:before
			color _orange
			content "-"

		&:before
			margin-right 10px

	h3
		font-family 'Fjalla One', sans-serif
		font-size 1.25em
		font-weight normal
		line-height 1em
		margin 50px 0
		text-transform uppercase

	.container
		margin 0 10px

	.epigraph p
		color _darkgray
		font-size .7em
		margin 0
		text-align center

	.event-list
		margin-bottom 25px

		.event
			margin 50px 0 25px
			padding 0 0 10px
			border-bottom 1px solid _darkgray

			a

				&:hover h3
					color _orange

				&.link
					text-align right

			h3
				applyTransition(.3s, ease-in-out)
				color _black
				font-style normal
				line-height 1.25em
				margin 0 0 15px

			.date
				color _darkgray
				font-size .8em
				font-weight bold

				.day
					margin-right 5px

	.link
		color _orange
		display block
		font-weight bold
		text-align center

		i
			margin-left 5px

	.musicians
		background _gray
		border-top 3px solid _darkgray
		margin 50px 0 0

		.musician
			background _white
			box-shadow 2px 2px 0 _darkgray
			margin 25px 0 50px

			img
				margin-top 0

			p.name
				font-size 1em
				font-weight bold
				text-align center
				text-transform uppercase

			.information
				border-top 1px solid _darkgray
				margin-top 25px

				a
					padding 10px 0

				p
					display none
					font-size .7em
					margin-top 25px

			.skills
				text-align center

				i
					font-size 30px

					&.fa-twitter
						color #00ACED

				p
					margin 0

			.show-img
				margin-top 0

	.pictures
		margin-bottom 25px

	.show-img
		display block
		margin-top 25px
		overflow hidden

		&:hover img
			transform scale(1.05) rotate(-1deg)

		img
			applyTransition(.5s, ease-in-out)