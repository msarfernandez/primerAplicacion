_darkGray = #bbb
_lightGray = #eee
_facebookColor = #3b5998
_twitterColor = #00aced
_youtubeColor = #bb0000

.container-fluid

	#discography, #whoweare
		background _lightGray

	#discography, #whoweare, #events
		font-size .9em
		padding-bottom 30px
		text-align left

		h2
			font-size 1.5em
			
	#events, #whoweare
		border-bottom 1px solid _darkGray

	#whoweare
		padding-top 25px

.social-bar 
	background _youtubeColor
	
	& > div
		text-align center

		&.facebook
			background _facebookColor

			&:hover
				background lighten(_facebookColor, 15%)

		&.twitter
			background _twitterColor

			&:hover
				background lighten(_twitterColor, 15%)

		&.youtube
			background _youtubeColor

			&:hover
				background lighten(_youtubeColor, 15%)

		a
			display block
			padding 10px 0 10px 10px

			&:hover
				text-decoration none

		span
			color _white
			display block
			font-size 2em
			margin 0
			vertical-align middle

			&.social-text
				font-size 1em
				min-width 160px