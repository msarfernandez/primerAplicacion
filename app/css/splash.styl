#splash-container
	height 100%
	left 0
	overflow hidden
	position absolute
	top 0
	width 100%
	z-index 10

	.splash
		color _white
		left 0
		position absolute
		top 25%
		width 100%
		z-index 20

		h1
			font-family "Befrisky"
			font-size 3em
			font-weight normal
			text-shadow 2px 1px 3px rgba(0, 0, 0, .8)

		.splash-subhead
			font-style italic
			text-shadow 2px 1px 3px rgba(0, 0, 0, .5)

		#show-video
			background _orange
			color _white
			margin-top 50px

			&:hover
				background lighten(_orange, 10%)

	.splash-background
		animation animarBackground 30s ease-in-out infinite alternate
		background url("../assets/images/cover.jpg")
		background-position center center
		background-repeat no-repeat
		background-size cover
		left 0
		min-height 100%
		min-width 100%
		position absolute
		top 0
		z-index 10