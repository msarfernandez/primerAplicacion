body, html
	color #242424
	font-family 'Open Sans', sans-serif
	font-size 16px
	height 100%
	letter-spacing 2px
	line-height 1.5em
	text-align center

	nav
		background rgba(0, 0, 0, .7)
		border-radius 5px
		font-size .9em
		position fixed
		right -150px
		text-align left
		transition right .5s ease-in-out
		top 75px
		width 200px

		&:hover
			right -5px

		.nav li
			height 55px

			a
				color #fff
				padding 1em .1em 1em 1em

				&:hover
					background rgba(0, 0, 0, .8)

				&:hover .icon
					transform scale(1.3)

				span
					display inline-block
					vertical-align middle

				.icon-facebook
					color #3b5998

				.icon-twitter
					color #4099ff

				.text
					width 75%

	.content #discography, .content #members, .content #events
		min-height 500px
		padding 50px 0

	.icon
		font-size 1.25em
		margin 0 5% 0 2%
		transition all .2s ease-in-out

	.site-wrapper
		display table
		height 100%
		width 100%

		.background
			height 100%
			left 0
			overflow hidden
			position absolute
			top 0
			width 100%
			z-index 0

			img
				animation animarBackground 30s ease-in-out infinite alternate
				height 100%
				left 0
				position absolute
				top 0
				width 100%

		.site-wrapper-inner
			color #fff
			display table-cell
			height 100%
			position relative
			vertical-align middle
			width 100%

			a.btn
				background transparent
				border 2px solid #fff
				color #fff
				display inline-block
				margin-top 50px
				padding 20px 0 22px
				transition all .3s ease-in-out
				width 300px

				&:hover
					transform scale(1.15)

			a.btn span
				display inline-block
				vertical-align middle

				&.btn-text
					font-size .9em
					margin-top 2px

			h1
				font-family "Befrisky"
				font-size 6em
				margin 0 0 25px 0
				text-shadow 2px 1px 3px rgba(0, 0, 0, .8)

			p.lead
				margin 0

			p.sub-heading
				font-style italic
				margin-bottom 1em
				text-shadow 2px 1px 3px rgba(0, 0, 0, .5)

@keyframes animarBackground {
	from {
		transform: scale(1) rotate(0deg);
	}
	35% {
		transform: scale(1.1) rotate(-2deg);
	}
	70% {
		transform: scale(1.05) rotate(1deg);
	}
	to {
		transform: scale(1.2) rotate(5deg);
	}
}